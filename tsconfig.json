{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": "."
  },
  "include": [
    "client/src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "config-overrides.js"
  ]
}
